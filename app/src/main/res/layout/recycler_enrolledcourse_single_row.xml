<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llContent"
    android:orientation="horizontal"
    android:weightSum="8">


    <ImageView
        android:layout_weight="2.5"
        android:id="@+id/imgCourseImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_weight="5.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="8">
        <TextView
            android:id="@+id/txtCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of the Course"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtCourseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCourseName"
            android:text="Book Category"
            android:padding="8dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtCourseTimeLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/04/2021-12/07/2021"
            android:padding="8dp"
            android:layout_below="@id/txtCourseCategory"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#357a38"/>
        <TextView
            android:id="@+id/txtCourseCredits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:padding="8dp"
            android:layout_below="@id/txtCourseTimeLine"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#357a38"/>
        <TextView
            android:id="@+id/txtCourseStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Started"
            android:padding="8dp"
            android:layout_below="@id/txtCourseCredits"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#357a38"/>
    </RelativeLayout>




</LinearLayout>
</androidx.cardview.widget.CardView>